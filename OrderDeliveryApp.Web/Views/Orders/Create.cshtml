@model OrderDeliveryApp.Core.Models.Order

@{
    ViewData["Title"] = "Создать заказ";
}

<h2>@ViewData["Title"]</h2>

<h4>Новый заказ</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="SenderCity" class="form-label"></label>
                <input asp-for="SenderCity" class="form-control" />
                <span asp-validation-for="SenderCity" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="SenderAddress" class="form-label"></label>
                <input asp-for="SenderAddress" class="form-control" />
                <span asp-validation-for="SenderAddress" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ReceiverCity" class="form-label"></label>
                <input asp-for="ReceiverCity" class="form-control" />
                <span asp-validation-for="ReceiverCity" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ReceiverAddress" class="form-label"></label>
                <input asp-for="ReceiverAddress" class="form-control" />
                <span asp-validation-for="ReceiverAddress" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Weight" class="form-label"></label>
                <input asp-for="Weight" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="PickupDate" class="form-label"></label>
                <input asp-for="PickupDate" class="form-control" type="date" />
                <span asp-validation-for="PickupDate" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-success">Создать</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Вернуться к списку</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
